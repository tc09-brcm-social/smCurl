#!/bin/bash
RULEPATH=$1
RSPPATH=$2
if [[ -z "$RSPPATH" ]]; then
    OPTRSP=""
else
    OPTGROUP=""
    if [[ "$RSPPATH" == *"/SmResponseGroup/"* ]]; then
        OPTGROUP=Group
    fi
    OPTRSP="\"Response${OPRGROUP}Link\": { \"path\": \"$RSPPATH\" },"
fi
cat <<EOF
    {
      "type": "SmPolicyLink", $OPTRSP
      "RuleLink": {
        "path": "$RULEPATH"
      }
    }
EOF
