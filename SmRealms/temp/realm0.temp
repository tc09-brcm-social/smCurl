#!/bin/bash
SMREALM=$1
APPVDIR=$2
SMAGENT=$3
SMAUTH=$4
cat <<EOF
{
  "AgentLink": {
    "path": "/SmAgents/$SMAGENT"
  },
  "AuthSchemeLink": {
    "path": "/SmAuthSchemes/$SMAUTH"
  },
  "ProtectAll": true,
  "Desc": "$APPVDIR realm",
  "Name": "$SMREALM",
  "ResourceFilter": "$APPVDIR",
  "ProcessAuthEvents": true,
  "ProcessAzEvents": true,
  "MaxTimeout": 7200,
  "IdleTimeout": 0,
  "SyncAudit": false,
  "SessionType": "Peristent",
  "SessionDrift": -1,
  "type": "SmRealm"
}
EOF
